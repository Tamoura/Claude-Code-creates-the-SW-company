# HumanID Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/humanid_dev"
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=10000

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=5013
HOST=0.0.0.0
NODE_ENV=development

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# API Key HMAC
API_KEY_HMAC_SECRET=your-api-key-hmac-secret-change-in-production

# Encryption (for credential claims at rest)
CLAIMS_ENCRYPTION_KEY=generate-with-openssl-rand-hex-32

# Blockchain (Polygon)
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_WALLET_PRIVATE_KEY=your-wallet-private-key
POLYGON_CHAIN_ID=137

# CORS
ALLOWED_ORIGINS=http://localhost:3117

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Internal API Key (for /health deep checks and /internal routes)
INTERNAL_API_KEY=your-internal-api-key

# SendGrid (email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@humanid.io

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:5013
