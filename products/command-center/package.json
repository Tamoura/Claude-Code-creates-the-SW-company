{
  "name": "command-center",
  "version": "0.1.0",
  "private": true,
  "description": "ConnectSW Command Center â€” Company management dashboard",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:web\"",
    "dev:api": "cd apps/api && pnpm run dev",
    "dev:web": "cd apps/web && pnpm run dev",
    "build": "pnpm run build:api && pnpm run build:web",
    "build:api": "cd apps/api && pnpm run build",
    "build:web": "cd apps/web && pnpm run build",
    "test": "pnpm run test:api",
    "test:api": "cd apps/api && pnpm test",
    "test:e2e": "npx playwright test",
    "test:e2e:report": "npx playwright show-report e2e-proof",
    "proof:package": "bash scripts/package-proof.sh",
    "lint": "pnpm run lint:api && pnpm run lint:web",
    "lint:api": "cd apps/api && pnpm run lint",
    "lint:web": "cd apps/web && pnpm run lint"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "concurrently": "^8.2.0"
  }
}
