{
  "name": "connectin",
  "version": "0.1.0",
  "private": true,
  "description": "AI-native, Arabic-first professional networking platform",
  "scripts": {
    "dev": "concurrently --names api,web --prefix-colors blue,green \"pnpm run dev:api\" \"pnpm run dev:web\"",
    "dev:api": "cd apps/api && pnpm run dev",
    "dev:web": "cd apps/web && pnpm run dev",
    "test": "pnpm run test:api && pnpm run test:web",
    "test:api": "cd apps/api && pnpm test",
    "test:web": "cd apps/web && pnpm test",
    "build": "pnpm run build:api && pnpm run build:web",
    "build:api": "cd apps/api && pnpm run build",
    "build:web": "cd apps/web && pnpm run build",
    "lint": "pnpm run lint:api && pnpm run lint:web",
    "lint:api": "cd apps/api && pnpm run lint --if-present",
    "lint:web": "cd apps/web && pnpm run lint --if-present",
    "typecheck": "pnpm run typecheck:api && pnpm run typecheck:web",
    "typecheck:api": "cd apps/api && npx tsc --noEmit",
    "typecheck:web": "cd apps/web && npx tsc --noEmit",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "docker:infra": "docker compose up -d db redis",
    "db:migrate": "cd apps/api && npx prisma migrate dev",
    "db:studio": "cd apps/api && npx prisma studio",
    "db:seed": "cd apps/api && npx tsx scripts/seed.ts",
    "test:e2e": "cd e2e && pnpm test",
    "test:e2e:headed": "cd e2e && pnpm run test:headed",
    "test:all": "pnpm run test && pnpm run test:e2e"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
