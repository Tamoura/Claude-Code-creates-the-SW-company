# ============================================
# ConnectIn -- Environment Variables
# ============================================
# Copy this file to .env and fill in the values.
# NEVER commit the .env file to version control.
# ============================================

# ------------------------------------------
# Database (PostgreSQL 15+)
# ------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/connectin_dev

# ------------------------------------------
# Redis (Cache, Sessions, Rate Limiting, Job Queue)
# ------------------------------------------
REDIS_URL=redis://localhost:6379

# ------------------------------------------
# JWT Authentication
# ------------------------------------------
JWT_SECRET=change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ------------------------------------------
# API Server
# ------------------------------------------
API_PORT=5007
API_HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3111

# ------------------------------------------
# Web Frontend
# ------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:5007
WEB_PORT=3111

# ------------------------------------------
# OAuth Providers (optional for MVP)
# ------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ------------------------------------------
# Email Service (optional for MVP)
# ------------------------------------------
SENDGRID_API_KEY=
EMAIL_FROM=noreply@connectin.dev

# ------------------------------------------
# Object Storage (optional for MVP)
# ------------------------------------------
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=

# ------------------------------------------
# AI Integration (optional for MVP)
# ------------------------------------------
ANTHROPIC_API_KEY=

# ------------------------------------------
# Security (production only)
# ------------------------------------------
# OAUTH_ENCRYPTION_KEY=  # 64-char hex string (32 bytes)
# API_KEY_HMAC_SECRET=   # HMAC secret for API key hashing

# ------------------------------------------
# Logging
# ------------------------------------------
# Salt for IP pseudonymisation (GDPR compliance)
LOG_SALT=generate-a-random-32-char-string-here

# ------------------------------------------
# Monitoring
# ------------------------------------------
GF_ADMIN_PASSWORD=change-this-in-production
