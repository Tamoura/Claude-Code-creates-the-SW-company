# Mu'aththir API Environment Variables
# Copy this file to .env and update values for your environment.
# NEVER commit the .env file to version control.

# Database
DATABASE_URL=postgresql://postgres@localhost:5432/muaththir_dev

# Server
PORT=5005
NODE_ENV=development

# Authentication (JWT)
# Generate secrets with: openssl rand -hex 32
JWT_SECRET=change-me-in-production
JWT_REFRESH_SECRET=change-me-in-production-too
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3108
ALLOWED_ORIGINS=http://localhost:3108

# Email (SendGrid or AWS SES - required for password reset, welcome emails)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=
# EMAIL_FROM=noreply@muaththir.com

# Stripe (subscription billing - required for premium tier)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PRICE_MONTHLY=price_...
# STRIPE_PRICE_ANNUAL=price_...

# Rate Limiting
RATE_LIMIT_AUTH=30
RATE_LIMIT_GENERAL=200

# Logging
LOG_LEVEL=info
