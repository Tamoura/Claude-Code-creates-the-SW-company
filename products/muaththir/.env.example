# Mu'aththir Environment Configuration
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.

# ──────────────────────────────────────────────
# Database
# ──────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/muaththir
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=muaththir

# ──────────────────────────────────────────────
# Application
# ──────────────────────────────────────────────
NODE_ENV=production
PORT=5005

# ──────────────────────────────────────────────
# Authentication
# ──────────────────────────────────────────────
# REQUIRED in production. Must be at least 32 characters.
# Generate with: openssl rand -base64 48
JWT_SECRET=generate-a-secure-random-string-min-32-chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRY_DAYS=7

# ──────────────────────────────────────────────
# CORS / Frontend
# ──────────────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3108
NEXT_PUBLIC_API_URL=http://localhost:5005
