# Server
PORT=5001
NODE_ENV=development
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/stablecoin_gateway_dev?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-jwt-secret-change-in-production"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Blockchain
ALCHEMY_API_KEY="your-alchemy-api-key"
INFURA_PROJECT_ID="your-infura-project-id"
QUICKNODE_ENDPOINT="your-quicknode-endpoint"

# Frontend
FRONTEND_URL="http://localhost:3104"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Blockchain confirmation thresholds
ETHEREUM_CONFIRMATIONS=3
POLYGON_CONFIRMATIONS=64

# CORS
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:3101"

# Webhook Secret Encryption
# [REQUIRED in production] Generate with: openssl rand -hex 32
# Must be exactly 64 hex characters (32 bytes for AES-256)
# If not set, webhook secrets are stored in plaintext (dev only)
WEBHOOK_ENCRYPTION_KEY=""

# AWS KMS Configuration (for secure private key management)
# Set USE_KMS=true to enable KMS-based key management (recommended for production)
USE_KMS=false
# REQUIRED when USE_KMS=true: KMS Key ID (ARN or key ID)
KMS_KEY_ID="arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"
# or use key ID directly:
# KMS_KEY_ID="12345678-1234-1234-1234-123456789012"

# AWS Region (defaults to AWS_REGION env var if not set)
AWS_REGION="us-east-1"

# KMS retry configuration (optional)
KMS_MAX_RETRIES="3"
KMS_TIMEOUT="30000"

# Internal Metrics Endpoint Authentication
# [REQUIRED in production] Used to protect the /metrics endpoint from public access
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=""

# API Key HMAC Secret
# [REQUIRED in production] Used to hash merchant API keys before storage
# Generate with: openssl rand -hex 32
# WARNING: Changing this value invalidates all existing API keys
API_KEY_HMAC_SECRET=""
