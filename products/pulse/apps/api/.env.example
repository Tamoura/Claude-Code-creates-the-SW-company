# Database
DATABASE_URL=postgresql://postgres@localhost:5432/pulse_dev
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=10

# Redis (optional - graceful degradation if not set)
REDIS_URL=redis://localhost:6379
REDIS_TLS=false
REDIS_PASSWORD=

# JWT
JWT_SECRET=pulse-dev-jwt-secret-change-in-production

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_webhook_hmac_secret

# Encryption (for GitHub token storage)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Frontend URL (for CORS and OAuth callback)
FRONTEND_URL=http://localhost:3106

# Server
PORT=5003
NODE_ENV=development
LOG_LEVEL=info

# Internal API key (for metrics endpoint)
INTERNAL_API_KEY=

# Push Notifications (production only)
EXPO_ACCESS_TOKEN=
